@model List<CRUD.Models.ViewModels.TablaViewModel>
@{
    ViewBag.Title = "Mis Datos";
}
<br />
<br />
<h2>@ViewBag.Tittle</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="~/tabla/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th></th>
            </tr>
            @foreach (var Elemento in Model)
            {
                <tr>
                    <td>@Elemento.Id</td>
                    <td>@Elemento.Nombre</td>
                    <td>@Elemento.Correo</td>
                    <td>
                        <a class="btn btn-default" href="/Tabla/Editar/@Elemento.Id">Editar</a>
                        <a  class="btn btn-danger" href="/Tabla/Eliminar/@Elemento.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
